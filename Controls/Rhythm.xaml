            <!-- Events -->
            <Grid x:Name="Menu_0" Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Background="Transparent">
                <Grid.ContextMenu>
                    <ContextMenu StaysOpen="True">
                        <MenuItem Header="Hi-Hat" IsCheckable="True" StaysOpenOnClick="True"  Click="HiHat_Click"/>
                        <MenuItem Header="Snare" IsCheckable="True" StaysOpenOnClick="True"  Click="Snare_Click"/>
                        <MenuItem Header="Tom" IsCheckable="True" StaysOpenOnClick="True"  Click="Tom_Click"/>
                        <MenuItem Header="Roto-Tom" IsCheckable="True" StaysOpenOnClick="True"  Click="RotoTom_Click"/>
                        <MenuItem Header="Floor-Tom" IsCheckable="True" StaysOpenOnClick="True" Click="FloorTom_Click"/>
                    </ContextMenu>
                </Grid.ContextMenu>
            </Grid>

            <Grid x:Name="Menu_1" Grid.Row="0" Grid.Column="1" Grid.RowSpan="7" Background="Transparent">
                <Grid.ContextMenu>
                    <ContextMenu StaysOpen="True">
                        <MenuItem Header="Hi-Hat" IsCheckable="True" StaysOpenOnClick="True"  Click="HiHat_Click"/>
                        <MenuItem Header="Snare" IsCheckable="True" StaysOpenOnClick="True"  Click="Snare_Click"/>
                        <MenuItem Header="Tom" IsCheckable="True" StaysOpenOnClick="True"  Click="Tom_Click"/>
                        <MenuItem Header="Roto-Tom" IsCheckable="True" StaysOpenOnClick="True"  Click="RotoTom_Click"/>
                        <MenuItem Header="Floor-Tom" IsCheckable="True" StaysOpenOnClick="True" Click="FloorTom_Click"/>
                    </ContextMenu>
                </Grid.ContextMenu>
