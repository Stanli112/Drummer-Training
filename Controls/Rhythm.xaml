<UserControl x:Class="CoordinationTraining.Controls.Rhythm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoordinationTraining.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="500"
             MaxHeight="350" MaxWidth="500"
             MinHeight="350" MinWidth="500">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.6*"/>
            </Grid.ColumnDefinitions>
            
            <!-- LINES -->
            <Rectangle Grid.Row="2" Grid.ColumnSpan="4" Height="3"  VerticalAlignment="Bottom" Fill="White"/>
            <Rectangle Grid.Row="3" Grid.ColumnSpan="4" Height="3"  VerticalAlignment="Bottom" Fill="White"/>
            <Rectangle Grid.Row="4" Grid.ColumnSpan="4" Height="3"  VerticalAlignment="Bottom" Fill="White"/>
            <Rectangle Grid.Row="5" Grid.ColumnSpan="4" Height="3"  VerticalAlignment="Bottom" Fill="White"/>
            <Rectangle Grid.Row="6" Grid.ColumnSpan="4" Height="3"  VerticalAlignment="Bottom" Fill="White"/>
            
            <!-- Title lines -->
            <Rectangle Grid.Row="1" Grid.ColumnSpan="4" Height="6"  VerticalAlignment="Top" Fill="#6E5EC7" Margin="45, 0"/>

            <!-- Floor-Tom -->
            <Grid x:Name="FloorTomDrum_0" Grid.Column="0" Grid.Row="1" Grid.RowSpan="6" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="6" Width="4" HorizontalAlignment="Center" Fill="#6E5EC7" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#6E5EC7" Grid.Row="5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>

            <Grid x:Name="FloorTomDrum_1" Grid.Column="1" Grid.Row="1" Grid.RowSpan="6" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="6" Width="4" HorizontalAlignment="Center" Fill="#6E5EC7" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#6E5EC7" Grid.Row="5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>

            <Grid x:Name="FloorTomDrum_2" Grid.Column="2" Grid.Row="1" Grid.RowSpan="6" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="6" Width="4" HorizontalAlignment="Center" Fill="#6E5EC7" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#6E5EC7" Grid.Row="5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
