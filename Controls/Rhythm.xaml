            </Grid>

            <Grid x:Name="FloorTomDrum_3" Grid.Column="3" Grid.Row="1" Grid.RowSpan="6" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="6" Width="4" HorizontalAlignment="Center" Fill="#6E5EC7" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#6E5EC7" Grid.Row="5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>
            
            <!-- Roto-Tom -->
            <Grid x:Name="RotoTomDrum_0" Grid.Column="0" Grid.Row="1" Grid.RowSpan="5" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="5" Width="4" HorizontalAlignment="Center" Fill="#00FFA9" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#00FFA9" Grid.Row="4">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>

            <Grid x:Name="RotoTomDrum_1" Grid.Column="1" Grid.Row="1" Grid.RowSpan="5" Visibility="Hidden">
                <Grid.RowDefinitions>
