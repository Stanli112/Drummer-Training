                </Ellipse>
            </Grid>

            <Grid x:Name="TomDrum_3" Grid.Column="3" Grid.Row="1" Grid.RowSpan="4" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="4" Width="4" HorizontalAlignment="Center" Fill="#FFDD00" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#FFDD00" Grid.Row="3">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>

            <!-- Snare -->
            <Grid x:Name="SnareDrum_0" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="3" Width="4" HorizontalAlignment="Center" Fill="#2196F3" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#2196F3" Grid.Row="3">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>

            <Grid x:Name="SnareDrum_1" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3"  Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="3" Width="4" HorizontalAlignment="Center" Fill="#2196F3" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#2196F3" Grid.Row="3">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>

            <Grid x:Name="SnareDrum_2" Grid.Column="2" Grid.Row="1" Grid.RowSpan="3"  Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="3" Width="4" HorizontalAlignment="Center" Fill="#2196F3" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#2196F3" Grid.Row="3">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>

            <Grid x:Name="SnareDrum_3" Grid.Column="3" Grid.Row="1" Grid.RowSpan="3"  Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="3" Width="4" HorizontalAlignment="Center" Fill="#2196F3" Margin="0,0,0,25"/>
                <Ellipse Width="50" Height="30" Fill="#2196F3" Grid.Row="3">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-20" CenterX="35" CenterY="80"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>
            
            <!-- Hi-Hat -->
            <Grid x:Name="HiHat_0" Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="2" Width="4" HorizontalAlignment="Center" Fill="#6E5EC7"/>
                
                <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Width="30" Height="30">
                    <Line X1="0" Y1="0" X2="30" Y2="30" Stroke="#6E5EC7" StrokeThickness="3"/>
                    <Line X1="0" Y1="30" X2="30" Y2="0" Stroke="#6E5EC7" StrokeThickness="3"/>
                </Grid>
            </Grid>

            <Grid x:Name="HiHat_1" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3"  Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="2" Width="4" HorizontalAlignment="Center" Fill="#6E5EC7"/>

                <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Width="30" Height="30">
                    <Line X1="0" Y1="0" X2="30" Y2="30" Stroke="#6E5EC7" StrokeThickness="3"/>
                    <Line X1="0" Y1="30" X2="30" Y2="0" Stroke="#6E5EC7" StrokeThickness="3"/>
                </Grid>
            </Grid>

            <Grid x:Name="HiHat_2" Grid.Row="1" Grid.Column="2" Grid.RowSpan="3"  Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="2" Width="4" HorizontalAlignment="Center" Fill="#6E5EC7"/>

                <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Width="30" Height="30">
                    <Line X1="0" Y1="0" X2="30" Y2="30" Stroke="#6E5EC7" StrokeThickness="3"/>
