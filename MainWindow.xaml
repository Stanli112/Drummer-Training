<Window x:Class="CoordinationTraining.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoordinationTraining"
        mc:Ignorable="d"
        MinWidth="1200" MinHeight="600"
        Title="MyManager" Height="800" Width="1400"
        Background="#3E3E42"
        WindowStyle="None" ResizeMode="NoResize">
    
    <Window.Resources>
        <Storyboard x:Key="OpenTaskColl">
            <DoubleAnimation Storyboard.TargetProperty="Height" 
                             Storyboard.TargetName="GridScrollTask" Duration="0:0:0.3" To="500" />
        </Storyboard>
        <Storyboard x:Key="CloseTaskColl">
            <DoubleAnimation Storyboard.TargetProperty="Height" 
                             Storyboard.TargetName="GridScrollTask" Duration="0:0:0.3" To="0" />
        </Storyboard>

        <Style TargetType="{x:Type TextBox}" x:Key="TbMinimalStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="BorderBrush" Value="#67676B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        
        <Style TargetType="{x:Type Button}" x:Key="BarMenu">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="Transparent"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#4B4B50"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="Transparent"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="BarMenuLbl">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="MainLbl">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="140"/>
        </Style>
        
    </Window.Resources>
    
    <Window.Triggers>

        <EventTrigger RoutedEvent="Button.Click" SourceName="BtnScrollUp">
            <BeginStoryboard Storyboard="{StaticResource CloseTaskColl}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Button.Click" SourceName="BtnScrollDown">
            <BeginStoryboard Storyboard="{StaticResource OpenTaskColl}"/>
        </EventTrigger>
        
    </Window.Triggers>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#1E1E1E" MouseLeftButtonDown="WindowMove">
                <Rectangle Height="5"  VerticalAlignment="Top" Fill="#2196F3"/>
                <Polygon Fill="#2196F3" Points="70,0 250,0 250,30 100,30"  HorizontalAlignment="Right" />

                <Label Content="Coordination training" VerticalAlignment="Center" FontSize="18" Foreground="#2196F3" Margin="50,0" FontFamily="Segoe UI Semibold"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0, 0, 15, 3">

                    <Button Style="{StaticResource BarMenu}" Height="15" Width="15" Click="CloseWindow">
                        <Grid>
                            <Line X1="0" Y1="0" X2="15" Y2="15" Stroke="Black" StrokeThickness="1.5"/>
                            <Line X1="0" Y1="13" X2="13" Y2="0" Stroke="Black" StrokeThickness="1.5"/>
                        </Grid>
                    </Button>

                </StackPanel>

            </Grid>

            <Grid x:Name="GridBar" Grid.Row="1" Grid.ColumnSpan="2" Background="#2D2D30" >

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">

                    <!--<Label Content="Такт, с:" FontSize="18" Foreground="White"/>-->
                    <TextBox x:Name="txtTact" Width="40" MaxLength="3" VerticalAlignment="Center"
                             TextChanged="txtTact_TextChanged" PreviewTextInput="txtTact_PreviewTextInput" Text="1,0"
                             Style="{StaticResource TbMinimalStyle}" IsReadOnly="True"/>

                    <!--<Label Content="Повторений:" FontSize="18" Foreground="White"/>-->
                    <TextBox x:Name="txtRepeat" Width="25" MaxLength="2" VerticalAlignment="Center"
                             TextChanged="txtRepeat_TextChanged" PreviewTextInput="txtRepeat_PreviewTextInput" Text="2" 
                             Style="{StaticResource TbMinimalStyle}" IsReadOnly="True" />

                </StackPanel>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Button x:Name="PlayStop" Click="PlayStop_Click" Background="Transparent" BorderBrush="Transparent" Margin="0,0,50,0">
                        <Image Source="Resources\play.png"/>
                    </Button>
                    
                    <Button x:Name="BtnRandom" Click="BtnRandom_Click" Background="Transparent" BorderBrush="Transparent">
                        <Image Source="Resources\refresh.png"/>
                    </Button>

                </StackPanel>

                <Grid HorizontalAlignment="Right" Width="400">
                    <Button Style="{StaticResource BarMenu}" x:Name="BtnScrollDown"
                            HorizontalAlignment="Right" Click="BtnScrollDown_Click"
                            Width="30" Height="30" Margin="0, 0, 10, 0" Visibility="Visible">
                        <Grid Width="30" Height="30">
                            <Line X1="3" Y1="15" X2="16" Y2="25" Stroke="White" StrokeThickness="1.5"/>
                            <Line X1="15" Y1="25" X2="27" Y2="15" Stroke="White" StrokeThickness="1.5"/>

                            <Line X1="3" Y1="10" X2="16" Y2="20" Stroke="White" StrokeThickness="1.5"/>
                            <Line X1="15" Y1="20" X2="27" Y2="10" Stroke="White" StrokeThickness="1.5"/>

                            <Line X1="3" Y1="5" X2="16" Y2="15" Stroke="White" StrokeThickness="1.5"/>
                            <Line X1="15" Y1="15" X2="27" Y2="5" Stroke="White" StrokeThickness="1.5"/>
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource BarMenu}" x:Name="BtnScrollUp"
                            HorizontalAlignment="Right" Click="BtnScrollUp_Click"
                            Width="30" Height="30" Margin="0, 0, 10, 0" Visibility="Hidden">
                        <Grid Width="30" Height="30">
                            <Line X1="3" Y1="15" X2="16" Y2="5" Stroke="White" StrokeThickness="1.5"/>
                            <Line X1="15" Y1="5" X2="27" Y2="15" Stroke="White" StrokeThickness="1.5"/>

                            <Line X1="3" Y1="20" X2="16" Y2="10" Stroke="White" StrokeThickness="1.5"/>
                            <Line X1="15" Y1="10" X2="27" Y2="20" Stroke="White" StrokeThickness="1.5"/>

                            <Line X1="3" Y1="25" X2="16" Y2="15" Stroke="White" StrokeThickness="1.5"/>
                            <Line X1="15" Y1="15" X2="27" Y2="25" Stroke="White" StrokeThickness="1.5"/>
                        </Grid>
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" x:Name="GridHand">

                    <Label Content="Р:" VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{StaticResource MainLbl}" FontSize="80" Margin="0,0,0,30"/>

                    <StackPanel x:Name="spHand" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                        
                        <Label x:Name="H1" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H2" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H3" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H4" Content="L" Style="{StaticResource MainLbl}" Margin="0,0,100,0"/>

                        <Label x:Name="H5" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H6" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H7" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H8" Content="L" Style="{StaticResource MainLbl}" Margin="0,0,100,0"/>

                        <Label x:Name="H9" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H10" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H11" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="H12" Content="L" Style="{StaticResource MainLbl}"/>
                                                
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    
                    <Label Content="Н:" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MainLbl}" FontSize="80" Margin="0, 30, 0, 0"/>

                    <StackPanel x:Name="spLeg" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">

                        <Label x:Name="L1" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L2" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L3" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L4" Content="L" Style="{StaticResource MainLbl}" Margin="0,0,100,0"/>

                        <Label x:Name="L5" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L6" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L7" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L8" Content="L" Style="{StaticResource MainLbl}" Margin="0,0,100,0"/>

                        <Label x:Name="L9" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L10" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L11" Content="L" Style="{StaticResource MainLbl}"/>
                        <Label x:Name="L12" Content="L" Style="{StaticResource MainLbl}"/>

                    </StackPanel>
                </Grid>
            </Grid>

        </Grid>
        <Grid x:Name="GridScrollTask" Width="270" Height="500" 
              VerticalAlignment="Top" HorizontalAlignment="Right" 
              Margin="0,85" Background="#2D2D30" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="LbTaskColl" Background="Transparent" Grid.Row="0" BorderBrush="Transparent" ItemsSource="{Binding g_PlayListColl}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="200" Height="60" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Width="50" Grid.Column="0">
                                <Button x:Name="btnAddTaskInColl"/>
                                <Button x:Name="btnStatusTask"/>
                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="1"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label  HorizontalAlignment="Center" Style="{StaticResource MainLbl}" 
                                Content="{Binding AllHand}" FontSize="15" Grid.Row="0" />

                                <Grid Background="White" Grid.Row="1" Margin="30,0"/>

                                <Label  HorizontalAlignment="Center" Style="{StaticResource MainLbl}" 
                                Content="{Binding AllLeg}" FontSize="15" Grid.Row="2"/>
                            </Grid>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Content="Р:" Style="{StaticResource MainLbl}"  FontSize="15" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Н:" Style="{StaticResource MainLbl}"  FontSize="15" Grid.Column="0" Grid.Row="1"/>

                    <TextBox x:Name="TbAddTaskInColl_Hand" 
                             Style="{StaticResource TbMinimalStyle}" 
                             Grid.Column="1" Grid.Row="0" MaxLength="15"
                             PreviewTextInput="TbAddTaskInColl_PreviewTextInput" Text="20"/>
                    <TextBox x:Name="TbAddTaskInColl_Leg" 
                             Style="{StaticResource TbMinimalStyle}" 
                             Grid.Column="1" Grid.Row="1" MaxLength="15"
                             PreviewTextInput="TbAddTaskInColl_PreviewTextInput"/>

                </Grid>
                
                <Button x:Name="BtnAddTaskInColl" Grid.Column="1" Click="BtnAddTaskInColl_Click"/>
            
            </Grid>
        </Grid>
    </Grid>
</Window>
