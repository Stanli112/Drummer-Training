<UserControl x:Class="CoordinationTraining.Controls.Rhythm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoordinationTraining.Controls"
             mc:Ignorable="d" 
             MaxHeight="{StaticResource CustomTactSizeHeight}" MaxWidth="1440"
             MinHeight="{StaticResource CustomTactSizeHeight}" MinWidth="360">
    <Grid>
        <StackPanel Orientation="Horizontal">

            <Grid x:Name="FirstNote" Height="{StaticResource CustomTactSizeHeight}">
                <local:CustomTact/>
            </Grid>

            <Grid x:Name="SecondNote" Height="{StaticResource CustomTactSizeHeight}">
                <local:CustomTact/>
            </Grid>

            <Grid x:Name="ThirdNote" Height="{StaticResource CustomTactSizeHeight}">
                <local:CustomTact/>
            </Grid>

            <Grid x:Name="FourNote" Height="{StaticResource CustomTactSizeHeight}">
                <local:CustomTact/>
            </Grid>
            
        </StackPanel>
    </Grid>
</UserControl>
