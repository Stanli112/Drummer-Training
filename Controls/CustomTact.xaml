<UserControl x:Class="CoordinationTraining.Controls.CustomTact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoordinationTraining.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="{StaticResource CustomTactSizeHeight}" d:DesignWidth="90"
             MaxHeight="{StaticResource CustomTactSizeHeight}" MaxWidth="360"
             MinHeight="{StaticResource CustomTactSizeHeight}" MinWidth="90">
    <Grid x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox Name="NoteChoise" Grid.Row="0" Width="90" Height="25" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Fourth" IsSelected="True"/>
            <ComboBoxItem Content="Eighth"/>
            <ComboBoxItem Content="Sixteenth"/>
            <ComboBoxItem Content="Thirty Sec"/>
        </ComboBox>

        <Grid x:Name="GridNote" Grid.Row="2">
            <local:Fourth/>
        </Grid>
    </Grid>
</UserControl>
